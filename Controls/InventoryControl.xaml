<UserControl x:Class="Underground_Psychosis.InventoryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="288" Height="192"
             HorizontalAlignment="Left" VerticalAlignment="Top">
  <UserControl.RenderTransform>
    <TransformGroup>
      <!-- scale first, then translate -->
      <ScaleTransform x:Name="PART_Scale" ScaleX="0.7" ScaleY="0.7" />
      <TranslateTransform x:Name="PART_Translate" X="0" Y="0" />
    </TransformGroup>
  </UserControl.RenderTransform>

  <Border Background="#CC222222" Padding="6" CornerRadius="6" Opacity="0.85">
    <ItemsControl ItemsSource="{Binding Slots}">
      <ItemsControl.ItemsPanel>
        <ItemsPanelTemplate>
          <UniformGrid Columns="3" Rows="2" />
        </ItemsPanelTemplate>
      </ItemsControl.ItemsPanel>

      <ItemsControl.ItemTemplate>
        <DataTemplate>
          <Button Width="88" Height="88" Margin="4" Padding="0" BorderThickness="0"
                  Background="#FF2B2B2B" ToolTip="{Binding Item.Name}" Click="Slot_Click">
            <Grid>
              <Image Source="{Binding Item.Icon}" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
          </Button>
        </DataTemplate>
      </ItemsControl.ItemTemplate>
    </ItemsControl>
  </Border>
</UserControl>