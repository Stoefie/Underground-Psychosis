<Window x:Class="Underground_Psychosis.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Underground_Psychosis"
        Title="MainWindow" Height="1080" Width="1920"
        PreviewKeyDown="Window_PreviewKeyDown">
    <Grid>
        <ContentControl x:Name="MainContent" Margin="0" UseLayoutRounding="True" SnapsToDevicePixels="True"/>
        <!-- Inventory overlay (collapsed by default) -->
        <local:InventoryControl x:Name="InventoryCtrl" Visibility="Collapsed"
                                HorizontalAlignment="Left" VerticalAlignment="Top"
                                Margin="12" />
    </Grid>
</Window>
