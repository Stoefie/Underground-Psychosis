<UserControl x:Class="Underground_Psychosis.InventoryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="320" Height="320">
    <Border Background="#DD222222" Padding="8" CornerRadius="6">
        <ItemsControl ItemsSource="{Binding Slots}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="3" Rows="3" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Width="96" Height="96" Margin="6" Background="#FF2B2B2B" CornerRadius="4"
                  ToolTip="{Binding Item.Name}">
                        <Grid>
                            <!-- Image shows nothing when null (empty slot) -->
                            <Image Source="{Binding Item.Icon}" Stretch="Uniform" />
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Border>
</UserControl>