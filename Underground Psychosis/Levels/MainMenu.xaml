<UserControl x:Class="Underground_Psychosis.Levels.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Underground_Psychosis"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">
    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="/images/background.png"></ImageBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Viewbox Grid.Row="1" Grid.Column="1" Stretch="Uniform">
            <Button x:Name="StartButton" Content="Start" Width="22" Height="5" Background="White" BorderBrush="Transparent" FontSize="2" Margin="1,1,1,1" BorderThickness="0,0,0,0"/>
        </Viewbox>
        <Viewbox Grid.Row="2" Grid.Column="1" Stretch="Uniform">
            <Button x:Name="OptionsButton" Content="Options" Width="22" Height="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="White" BorderBrush="transparent" FontSize="2" BorderThickness="0,0,0,0" Margin="1,1,1,1"/>
        </Viewbox>
        <Viewbox Grid.Row="3" Grid.Column="1" Stretch="Uniform">
            <Button x:Name="ArcadeButton" Content="Arcade" Margin="1,1,1,1" Width="22" Height="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="White" BorderBrush="transparent" FontSize="2" BorderThickness="0,0,0,0"/>
        </Viewbox>
        <Viewbox Grid.Row="4" Grid.Column="1" Stretch="Uniform">
            <Button x:Name="ExitButton" Content="Exit" Margin="1,1,1,1" Width="22" Height="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="White" BorderBrush="transparent" FontSize="2" BorderThickness="0,0,0,0"/>
        </Viewbox>

        <ContentControl x:Name="MainContent"/>
    </Grid>
</UserControl>
