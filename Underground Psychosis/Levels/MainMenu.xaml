<UserControl x:Class="Underground_Psychosis.Levels.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Underground_Psychosis"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">
    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="/images/background.png"></ImageBrush>
        </Grid.Background>
        <Button x:Name="StartButton" Content="Start" HorizontalAlignment="Center" VerticalAlignment="Top" Width="240" Height="60" Background="White" BorderBrush="Transparent" FontSize="24" Margin="0,492,0,0"/>
        <Button x:Name="OptionsButton" Content="Options"  HorizontalAlignment="Center" Margin="0,591,0,0" VerticalAlignment="Top" Width="240"
        Height="60" Background="White" BorderBrush="transparent" FontSize="24"/>
        <Button x:Name="ExitButton" Content="Exit" HorizontalAlignment="Center" VerticalAlignment="Top" Width="240"
        Height="60" Margin="0,694,0,0" Background="White" BorderBrush="Transparent" FontSize="24"/>
        <ContentControl x:Name="MainContent" />
    </Grid>
</UserControl>
